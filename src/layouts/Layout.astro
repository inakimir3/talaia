---
import "../styles/global.css";
import '@fontsource-variable/public-sans';
import '@fontsource-variable/merriweather';
import "sal.js/dist/sal.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/png" href="/images/favicon/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/images/favicon/favicon.svg" />
		<link rel="shortcut icon" href="/images/favicon/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="Talaia" />
		<link rel="manifest" href="/images/favicon/site.webmanifest" />
		<title>Talaia Charter | Alquiler de llaut en la Costa Norte de Mallorca</title>
		<meta name="description" content="Disfruta de un paseo exclusivo en el llaut Talaia por la costa norte de Mallorca. Alquiler privado para familias y grupos. Reserva tu experiencia náutica hoy.">
		<script src="https://kit.fontawesome.com/44dc33ce77.js" crossorigin="anonymous"></script>
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "BoatTrip",
			"name": "Alquiler del Llaut Talaia",
			"description": "Excursión privada en llaut por la costa norte de Mallorca",
			"areaServed": "Mallorca",
			"provider": {
				"@type": "LocalBusiness",
				"name": "Llaut Talaia"
			}
		}
		</script>
	</head>
	<body>
        <slot />
		<script>
			import sal from "sal.js";

			document.addEventListener("DOMContentLoaded", () => {
				sal();
			});
		</script>
	
	</body>
	
</html>

<style>
	html,
	body {
		font-family: 'Public Sans Variable', sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

