---
import { useTranslations, getLocalizedRoute } from "../i18n/utils";
import { languages } from "../i18n/ui";
const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslations(currentLang as keyof typeof languages);

const localizedLink = (path: string) => {
  if (currentLang === "es") return path;
  return `/${currentLang}${path}`; 
};
---

<section class="overflow-hidden px-5 lg:px-10 grid grid-cols-1 lg:grid-cols-3 my-20 lg:my-60 gap-3 lg:gap-5 relative w-full">
    <article data-sal="slide-right" data-sal-duration="800" data-sal-delay="200" data-sal-easing="ease-out-bounce" class="group relative py-5 lg:py-10 px-5 flex items-center justify-center overflow-hidden cursor-pointer">
        <div class="relative z-30 flex flex-col items-center text-center text-balance gap-4 max-w-full lg:max-w-lg px-4 font-thin text-black group-hover:text-white transition duration-300">
            <p class="text-[14px] lg:text-[18px]">{translateLabels("precios1.time")}</p>
            <h3 class="text-[28px] lg:text-[40px] font-medium leading-7 lg:leading-12">{translateLabels("precios1.title")}</h3>
            <p class="text-[16px] lg:text-[20px]">
                {translateLabels("precios1.description")}            </p>
            <p class="font-medium text-[24px] lg:text-[32px]">{translateLabels("precios1.price")}</p>
            <p class="text-[14px] lg:text-[18px]">{translateLabels("precios1.note")}</p>
        </div>
        <div class="w-full h-full bg-black opacity-0 group-hover:opacity-40 transition duration-300 absolute top-0 left-0 z-20"></div>
        <img src="/images/llaut-4.webp" alt="Llaut navegando al atardecer cerca de Alcanada" class="opacity-0 group-hover:opacity-100 transition duration-300 absolute z-10 top-0 left-0 w-full h-full  object-cover" />
    </article>

    <article data-sal="slide-up" data-sal-duration="800" data-sal-delay="200" data-sal-easing="ease-out-bounce" class="group relative py-10 lg:py-20 px-5 flex items-center justify-center overflow-hidden cursor-pointer">
